<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>fatjar</id>

  <baseDirectory>/</baseDirectory>
  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>./target/dependency</directory>
      <outputDirectory>m2repo/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>true</useProjectArtifact>
      <includes>
        <include>org.wildfly.self-contained:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>true</useProjectArtifact>
      <includes>
        <include>org.jboss.modules:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>modules/**</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>org.wildfly.core:wildfly-core-feature-pack</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>

